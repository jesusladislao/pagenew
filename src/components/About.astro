  </header>
  <div class="space-y-8">
    {
      experiences.map(exp => (
        <article class="about-post flex items-center gap-6 rounded-2xl shadow-xl p-8 border border-[var(--white-icon-tr)] bg-gradient-to-r from-[var(--sec)]/60 to-[#181818] hover:scale-[1.03] transition-transform duration-300">
          {exp.logo && (
            <img 
                src={exp.logo.startsWith('/') ? exp.logo : exp.logo}
              alt={exp.company + ' logo'} 
              class="w-16 h-16 rounded-xl shadow-lg border-2 border-[var(--sec)] bg-white object-contain shrink-0" 
              loading="lazy"
              onerror="this.style.display='none';"
            />
          )}
          <div>
            <h2 class="text-2xl font-bold text-white mb-1">{exp.role}</h2>
            <span class="block text-sm text-[var(--white-icon)] mb-1">{exp.company}</span>
            <time class="block text-sm text-[var(--white-icon)] mb-2">{exp.dates}</time>
